<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18ffff"
    android:orientation="vertical"
    android:paddingTop="60dp"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:contentPadding="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:id="@+id/personIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#AAAAAA"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_account_grey600_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/personIV"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="1 traveler"
                    android:textColor="#696969"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#009AD3"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_pencil_grey600_24dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <RelativeLayout

                    android:id="@+id/loc"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/heart_multiple"
                    android:paddingLeft="16dp">

                    <ImageView
                        android:id="@+id/locationIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="#AAAAAA"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_disc_grey600_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/locationIV"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:text="Where from?"
                        android:textColor="#959595"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@+id/loc"
                    android:paddingLeft="16dp">

                    <ImageView
                        android:id="@+id/planeIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="#AAAAAA"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:paddingLeft="3dp"
                        android:rotation="90"
                        android:src="@drawable/ic_airplane_grey600_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/planeIV"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="Where to?"
                        android:textColor="#959595"
                        android:textSize="16sp" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="16dp"
                    android:src="@drawable/box_drawings_light_triple_dash_vertical_u2506_icon_256x256"
                    android:tint="#AAAAAA"
                    android:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

